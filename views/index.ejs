<%- include('partials/nav') %>
<br>
<div class="flex flex-col">
<p class="text-center text-4xl font-bold text-[#0e0e0e]">Refresh For Random Food Recipes!</p>
<br>
<button class="text-center p-4 bg-green-400 w-auto text-white rounded-lg shadow-md" onclick="reload()"><i class="fa-solid fa-arrows-rotate pr-2"></i>Refresh</button>
</div>
<div class="flex items-center justify-center flex-col">
    <br>
    <div class="recipe flex flex-col lg:flex-row gap-10 items-center bg-[#eeee]">
        <div class="h-full w-1/2">
            <img class="h-full" src="<%= image %>" alt="">
        </div>
        <div class="w-1/2">
            <br>
            <p class="text-3xl font-bold"><%= name %></p>
            <div class="flex">
                <p class="text-xs font-light after:content-['|'] text-[#434242ee]"><%= cuisine %></p>

                <p class="text-xs font-light text-[#434242ee]"><%= category %></p>
            </div>
            <br>
            <hr>
            <br>
            <p class="text-xl font-bold">Ingredients</p>
            <p class="text-xs font-light text-[#434242ee]"><%= ingredients %></p>
            <br>
            <hr>
            <br>
            <p class="text-xl font-bold">Instructions</p>
            <p><%= instructions %></p>
            <br>
        </div>
    </div>
    <br>
</div>
<%- include('partials/foot') %>